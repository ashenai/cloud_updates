[Unit]
Description=uWSGI Cloud Updates Application
After=network.target

[Service]
User=psaserv
Group=psacln
RuntimeDirectory=cloud_updates
WorkingDirectory=/var/www/vhosts/shen-ai.cloud/cloud_updates
Environment=PATH=/var/www/vhosts/shen-ai.cloud/venv/bin
ExecStart=/var/www/vhosts/shen-ai.cloud/venv/bin/uwsgi --ini /etc/uwsgi/apps-enabled/cloud_updates.ini
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGQUIT
TimeoutStopSec=5
Restart=always

[Install]
WantedBy=multi-user.target